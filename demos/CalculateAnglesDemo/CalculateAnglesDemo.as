package  {		import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.Event;	import flash.geom.ColorTransform;		import cc.cote.airbag.*;	public class CalculateAnglesDemo extends MovieClip 	{				public var container:Sprite = new Sprite();		public var border:Sprite = new Sprite();				public function CalculateAnglesDemo() {						// Add the ball container to the stage			addChild(container);						// Create a border around the stage			border.graphics.lineStyle(20, 0x555555);			border.graphics.drawRect(0, 0, stage.stageWidth, stage.stageHeight);			addChild(border);						// Add a bunch of balls that will bounce around			for (var i:uint = 0; i < 5; i++) {				var ball:Ball = new Ball(border);				container.addChild(ball);			}					}			}	}